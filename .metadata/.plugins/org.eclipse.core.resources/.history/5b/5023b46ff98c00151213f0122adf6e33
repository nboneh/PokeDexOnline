package com.Boneh.Nir.Quiz4.client;

import com.Boneh.Nir.Quiz4.dao.BookDAO;
import com.Boneh.Nir.Quiz4.dao.DVDDAO;
import com.Boneh.Nir.Quiz4.dao.hibernate.HibernateBookDAO;
import com.Boneh.Nir.Quiz4.dao.hibernate.HibernateDVDDAO;
import com.Boneh.Nir.Quiz4.model.Book;
import com.Boneh.Nir.Quiz4.model.DVD;


public class EventManagerClient
{
    private static BookDAO bookDAO;    
    private static DVDDAO dvdDAO;

    static
    {
    	bookDAO = new HibernateBookDAO(); // No dependency injection considered
        
    	dvdDAO = new HibernateDVDDAO();
    }
    
    public static void main( String[] args )
    {        
    	dvdQuery();
    	bookQuery();
    }
    
    public static void dvdQuery(){
    	dvdDAO.saveDVD(new DVD("Dare to go Solo", 2006,1));
    	dvdDAO.saveDVD(new DVD("Dare to go Solo", 1999,2));
    	dvdDAO.saveDVD(new DVD("Intro to Programming", 2011,3));
    	dvdDAO.saveDVD(new DVD("Intro to Programming", 1970,4));
    	dvdDAO.saveDVD(new DVD("Dare to go Solo", 2012,5));
    	dvdDAO.saveDVD(new DVD("Dare to go Solo", 2000,6));
    }

    public static void bookQuery()
    {
    	
    	bookDAO.saveBook(new Book("Dare to go Solo", "Elizabeth Boese"));
		bookDAO.saveBook(new Book("Intro to Programming with Java Applets", "Elizabeth Boese"));
		bookDAO.saveBook(new Book("Dare to go Solo", "Wise Travelguy"));
		bookDAO.saveBook(new Book("Intro to Programming with Java Applets", "Elizabeth Boe"));
        
    
    }
    
   
}
