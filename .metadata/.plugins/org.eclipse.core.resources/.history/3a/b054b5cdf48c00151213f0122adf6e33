package com.Boneh.Nir.Quiz4.dao.hibernate;

import org.hibernate.Session;
import org.hibernate.Transaction;

import no.uio.inf5750.example.dao.EventDAO;
import no.uio.inf5750.example.dao.hibernate.util.HibernateUtil;
import no.uio.inf5750.example.model.Event;

public class HibernateBookDAO
    implements BookDAO
{
    public int saveEvent( Book book )
    {
        Session session = HibernateUtil.getCurrentSession();
        
        Transaction transaction = session.beginTransaction();
        
        int id = (Integer) session.save( event );
        
        transaction.commit(); // No error handling considered
        
        return id;
    }
    
    public Event getEvent( int id )
    {
        Session session = HibernateUtil.getCurrentSession();
        
        return (Event) session.get( Event.class, id );
    }
}

